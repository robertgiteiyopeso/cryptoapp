<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_default"
    android:background="@color/black"
    tools:context=".CoinDetailsActivity">


    <TextView
        android:id="@+id/tvTitleHeader"
        style="@style/header_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Titlu mare" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/paragraph_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleHeader"
        tools:text="descrieredescriere\ndes\nc\nriere" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="status" />

    <TextView
        android:id="@+id/tvTitleTags"
        style="@style/title_style"
        android:text="@string/tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        tools:text="Titlu etichete" />

    <GridView
        android:id="@+id/grdTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="@dimen/grid_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTags" />

    <TextView
        android:id="@+id/tvTitleTeams"
        style="@style/title_style"
        android:text="@string/team_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/grdTags"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Titlu echipe"/>

    <TextView
        android:id="@+id/tvTeamLeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_style"
        android:textSize="@dimen/big_text"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTeams"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Team leader 1" />

    <TextView
        android:id="@+id/tvTeamRole1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/paragraph_style"
        app:layout_constraintTop_toBottomOf="@id/tvTeamLeader1"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Rol 1" />

    <View
        android:id="@+id/vwLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvTeamRole1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTeamLeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_style"
        android:textSize="@dimen/big_text"
        app:layout_constraintTop_toBottomOf="@id/vwLine1"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Team leader 2" />

    <TextView
        android:id="@+id/tvTeamRole2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/paragraph_style"
        app:layout_constraintTop_toBottomOf="@id/tvTeamLeader2"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Rol 2" />

    <View
        android:id="@+id/vwLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvTeamRole2"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>